  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^4.0.0",
    "moment": "^2.27.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
